---
const title = "21 scheduling rules, validated automatically";
const subtitle = "Every schedule runs through 13 hard rules (must not violate) and 8 soft rules (optimized with penalties). No manual checking needed.";

const hardRules = [
  { title: "Minimum staff per shift", description: "Based on census bands" },
  { title: "Charge nurse required", description: "24/7 clinical leadership" },
  { title: "Patient-to-nurse ratio", description: "Census band limits enforced" },
  { title: "10-hour rest between shifts", description: "Fatigue prevention" },
  { title: "Max 5 consecutive days", description: "Mandatory day off" },
  { title: "60-hour weekly limit", description: "Safety cap" },
  { title: "Level 1 needs preceptor", description: "Orientees paired with Level 5" },
  { title: "Level 2 ICU/ER supervision", description: "Level 4+ must be present" },
  { title: "No overlapping shifts", description: "Can't be two places at once" },
  { title: "PRN availability required", description: "Only schedule when available" },
  { title: "Leave blocks scheduling", description: "Approved leave respected" },
  { title: "On-call limits", description: "1/week, 1 weekend/month" },
  { title: "ICU competency minimum", description: "Level 2+ for critical care" },
];

const softRules = [
  { title: "Overtime penalty", description: "Actual OT (>40h) penalized higher than extra hours" },
  { title: "Weekend requirements", description: "3 weekends per 6-week period (configurable)" },
  { title: "Consecutive weekends", description: "Penalty for >2 in a row" },
  { title: "Annual holiday fairness", description: "Christmas Eve + Day count as one holiday" },
  { title: "Preference matching", description: "Honor shift and day preferences" },
  { title: "Skill mix diversity", description: "Prevent junior-heavy shifts" },
  { title: "Float penalty", description: "Minimize cross-unit assignments" },
  { title: "Charge distribution", description: "Spread charge duties fairly" },
];
---

<section class="bg-linear-to-b from-white via-slate-50 to-white">
  <div class="mx-auto max-w-[85rem] px-4 py-16 sm:px-6 lg:px-8 lg:py-24">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-balance text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
        {title}
      </h2>
      <p class="mt-4 text-lg text-slate-700">{subtitle}</p>
    </div>

    <div class="mt-12 grid gap-8 lg:grid-cols-2">
      {/* Hard Rules */}
      <div class="rounded-2xl border-2 border-red-200 bg-white p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">
          <span class="inline-block px-2 py-1 bg-red-100 text-red-700 text-xs font-bold rounded mr-2">HARD</span>
          13 rules that cannot be broken
        </h3>
        <ul class="space-y-3">
          {hardRules.map((rule) => (
            <li class="flex items-start gap-2 text-sm">
              <span class="mt-1 text-red-500 shrink-0">&#10005;</span>
              <div>
                <span class="font-medium text-slate-900">{rule.title}</span>
                <span class="text-slate-500"> - {rule.description}</span>
              </div>
            </li>
          ))}
        </ul>
      </div>

      {/* Soft Rules */}
      <div class="rounded-2xl border-2 border-amber-200 bg-white p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">
          <span class="inline-block px-2 py-1 bg-amber-100 text-amber-700 text-xs font-bold rounded mr-2">SOFT</span>
          8 rules optimized with penalties
        </h3>
        <ul class="space-y-3">
          {softRules.map((rule) => (
            <li class="flex items-start gap-2 text-sm">
              <span class="mt-1 text-amber-500 shrink-0">&#9679;</span>
              <div>
                <span class="font-medium text-slate-900">{rule.title}</span>
                <span class="text-slate-500"> - {rule.description}</span>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <p class="mt-8 text-center text-slate-600">
      All rules are configurable per unit. Violations are logged in the audit trail.
    </p>
  </div>
</section>
