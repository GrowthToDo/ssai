---
const title = `This isn't "another scheduling tool"`;
const subTitle = `Software is just a faster way to make mistakes. Our service removes the patching burden entirely.`;

const features = [
  {
    title: "Software",
    description: "",
    class: "content-center border-b border-dashed border-slate-400 py-5 sm:p-5",
    moreFeatures: [
      "You build drafts + train staff",
      "You manage rules + chase changes",
      "You resolve the 'holes' yourself",
    ],
  },
  {
    title: "Our Service",
    description: "",
    class: "content-center border-b border-dashed border-slate-400 py-5 sm:border-l sm:p-5",
    moreFeatures: [
      "You send inputs + we deliver the schedule",
      "We run the call-out coverage workflow",
      "You approve exceptions only",
    ],
  },
];

const processImage = "/process-flow.png";
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
      <Fragment set:html={title} />
    </h2>
    <p class="mt-1 text-pretty text-slate-600">
      <Fragment set:html={subTitle} />
    </p>
  </div>

  <div class="mx-auto grid max-w-[85rem] px-4 pb-10 sm:grid-cols-2 sm:px-6 lg:px-8 lg:pb-14">
    {features.map((feature) => (
      <div class={`${feature.class}`}>
        <h2 class="text-2xl font-bold text-slate-700">{feature.title}</h2>

        <p class="mt-2 text-base/6 text-slate-600">
          <Fragment set:html={feature.description || ""} />
        </p>

        {feature.moreFeatures && (
          <ul class="ml-4 mt-4 w-4/5 list-inside list-disc space-y-2 text-base/6 text-slate-600 marker:text-teal-600">
            {feature.moreFeatures.map((item) => <li>{item}</li>)}
          </ul>
        )}
      </div>
    ))}
  </div>

  <div class="mx-auto max-w-4xl px-4 pt-10 sm:px-6 lg:px-8">
    <img
      src={processImage}
      alt="Process flow: Inputs to Build to Validate to Deliver"
      class="rounded-xl shadow-lg w-full h-auto"
    />
  </div>
</div>