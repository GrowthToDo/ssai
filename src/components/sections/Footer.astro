---
import FooterForm from "@ui/forms/FooterForm.astro";
import ContactInfo from "@common/ContactInfo.astro";

const companyName = "SimpleScheduleAI";
const companyDescription =
  "Assisted nurse scheduling for Critical Access Hospitals. Keep your tools, keep control, reduce the weekly scheduling load.";

const contactDetails = {
  address: "Remote, US",
  phone: "",
  email: "gauthamail@gmail.com",
  website: "simplescheduleai.com",
};

const copyrightYear = new Date().getFullYear();
---

<footer class="mt-auto w-full bg-linear-to-t/oklch from-teal-200 via-transparent to-white pb-10">
  <div class="mx-auto mt-auto w-full max-w-[85rem] px-4 pb-10 sm:px-6 lg:px-8">
    <hr class="mb-10 border-slate-200" />

    <div class="grid grid-cols-2 gap-6 md:grid-cols-5">
      {/* Company */}
      <div class="col-span-full self-center xl:col-span-2">
        <a
          href="/"
          class="flex-none text-xl font-semibold text-slate-900 focus:opacity-80 focus:outline-hidden"
          aria-label={`${companyName} Homepage`}
          translate="no"
        >
          <span class="text-teal-700">Simple</span><span class="text-slate-700">Schedule</span><span class="text-teal-700">AI</span>
        </a>

        <p class="mt-5 text-pretty text-slate-700 lg:w-5/12 xl:w-10/12">
          {companyDescription}
        </p>

        <div class="mt-6 flex flex-wrap gap-2">
          <a
            href={`${import.meta.env.BASE_URL}how-it-works`}
            class="inline-flex items-center justify-center rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-50"
          >
            How it Works
          </a>
          <a
            href={`${import.meta.env.BASE_URL}pilot`}
            class="inline-flex items-center justify-center rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-slate-50"
          >
            Pilot
          </a>
          <a
            href="https://cal.com/gautham-8bdvdx/30min"
            class="inline-flex items-center justify-center rounded-xl bg-teal-700 px-4 py-2 text-sm font-semibold text-white hover:bg-teal-600"
          >
            Book a Call
          </a>
        </div>
      </div>

      {/* Contact */}
      <div class="col-span-1 md:col-span-2 xl:col-span-1 xl:col-start-3">
        <h3 class="font-semibold text-slate-900">Contact</h3>
        <p class="mt-3 text-sm text-slate-700">Talk to a human. We respond fast.</p>
        <div class="mt-4">
          <ContactInfo {...contactDetails} />
        </div>
        <p class="mt-6 text-sm text-slate-600">
          We work with your current format.<br />Excel is fine.
        </p>
      </div>

      {/* Form */}
      <div class="col-span-2 md:col-span-3 xl:col-span-2">
        <h3 class="font-semibold text-slate-900">Get the pilot details</h3>
        <p class="mt-3 text-sm text-slate-700">
          Leave your email and we will send a one page overview.
        </p>
        <div class="mt-4">
          <FooterForm />
        </div>
        <p class="mt-4 text-xs text-slate-600">
          No spam. If you are not a fit, we will tell you quickly.
        </p>
      </div>
    </div>

    <hr class="mb-5 mt-10 border-slate-200" />

    <div class="grid gap-y-2 sm:flex sm:items-center sm:justify-between sm:gap-y-0">
      <p class="text-sm text-slate-500">
        &copy; {copyrightYear} {companyName}. Built for Texas CAHs.
      </p>

      <div class="flex gap-4 text-sm text-slate-500">
        <a href={`${import.meta.env.BASE_URL}contact`} class="hover:text-slate-700">Contact</a>
        <a href={`${import.meta.env.BASE_URL}about`} class="hover:text-slate-700">About</a>
      </div>
    </div>
  </div>
</footer>