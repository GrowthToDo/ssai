---
import Button from "@ui/Button.astro";

const title = "Stop patching holes in the schedule";

const subTitle =
  "We deliver a stable, post-ready schedule every week—and we run the call-out coverage workflow—using your rules, eligibility constraints, and a leadership-ready exceptions + decisions log.";

const supportLine =
  "Risk-free 30-day pilot for one unit. Built for Texas CAHs: lean teams, 24/7 ED reality, real constraints.";

const primaryCTA = {
  text: "Get a process walkthrough",
  href: "/contact",
};

const secondaryCTA = {
  text: "How it Works",
  href: "/how-it-works",
};
---

{/* Hero Content */}
<div class="mx-auto max-w-4xl select-none text-left sm:text-center">
  <h1
    class="block text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
  >
    {title}
  </h1>
</div>

<div class="mx-auto mt-6 max-w-3xl text-left sm:text-center">
  <p class="text-pretty text-lg text-slate-700">
    {subTitle}
  </p>
</div>

<div class="mx-auto mt-4 max-w-2xl text-left sm:text-center">
  <p class="text-pretty text-base text-slate-500">
    {supportLine}
  </p>
</div>

{/* CTA Buttons */}
<div class="mt-10 flex flex-col justify-center gap-5 sm:flex-row">
  <Button href={primaryCTA.href} variant="primary">
    {primaryCTA.text}
  </Button>

  <Button href={secondaryCTA.href} variant="secondary">
    {secondaryCTA.text}
  </Button>
</div>