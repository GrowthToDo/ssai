---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";

const pageTitle = "About SimpleScheduleAI";
const pageDescription =
  "Assisted nurse scheduling for Critical Access Hospitals. We reduce scheduling load while your team keeps tools, control, and final approval.";

const seo = {
  title: pageTitle,
  description: pageDescription,
};

const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: pageTitle,
  description: pageDescription,
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "SimpleScheduleAI",
    description: pageDescription,
  },
};

const stats = [
  { label: "Built for", value: "Critical Access Hospitals" },
  { label: "Works with", value: "Excel and your current format" },
  { label: "Designed for", value: "Nurse managers and leadership" },
  { label: "Approach", value: "Assisted, not replacement" },
];

const principles = [
  {
    title: "You keep control",
    description:
      "Your team owns the rules, the exceptions, and the final approval. We support the work, you decide what goes live.",
  },
  {
    title: "Fits your current workflow",
    description:
      "No new software rollout. No training burden. We work with the format you already use, including Excel.",
  },
  {
    title: "Clear handoffs",
    description:
      "You get a review ready schedule, notes on conflicts and assumptions, and a simple validation summary for quick sign off.",
  },
];

const whatWeDo = [
  "Build draft schedules based on your inputs and constraints",
  "Validate coverage, gaps, conflicts, and common failure points",
  "Return a clean, review ready version for your approval",
];

const whatWeDoNotDo = [
  "We do not publish schedules without your approval",
  "We do not change your policies or override your leadership",
  "We do not replace your staff or act as your HR system",
];

const ctaLink = "https://cal.com/gautham-8bdvdx/30min";
---

<BaseLayout seo={seo} schema={schema}>
  {/* Hero */}
  <section class="relative overflow-hidden">
    <div class="pointer-events-none absolute inset-0">
      <div class="absolute -top-24 left-1/2 h-80 w-[52rem] -translate-x-1/2 rounded-full bg-teal-200/45 blur-3xl"></div>
      <div class="absolute -bottom-24 left-1/2 h-80 w-[52rem] -translate-x-1/2 rounded-full bg-sky-200/25 blur-3xl"></div>
    </div>

    <div class="relative mx-auto max-w-[85rem] px-4 pb-12 pt-12 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl rounded-3xl border border-slate-200 bg-white/80 p-8 shadow-sm backdrop-blur sm:p-10">
        <p class="text-sm font-semibold tracking-wide text-teal-700">
          SimpleScheduleAI
        </p>

        <h1 class="mt-3 text-balance text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">
          {pageTitle}
        </h1>

        <p class="mt-4 text-lg text-slate-700">
          {pageDescription}
        </p>

        <div class="mt-7 flex flex-col gap-3 sm:flex-row sm:items-center">
          <a
            href="/how-it-works"
            class="inline-flex items-center justify-center rounded-xl bg-teal-700 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-teal-600"
          >
            See how it works
          </a>

          <a
            href="/pilot"
            class="inline-flex items-center justify-center rounded-xl border border-slate-300 bg-white px-5 py-3 text-sm font-semibold text-slate-900 hover:bg-slate-50"
          >
            View the pilot
          </a>

          <a
            href={ctaLink}
            class="text-sm font-semibold text-slate-700 hover:text-slate-900"
          >
            Ask a question
          </a>
        </div>
      </div>

      {/* Stats */}
      <div class="mx-auto mt-10 max-w-6xl">
        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          {
            stats.map((stat) => (
              <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                <dt class="text-sm text-slate-600">{stat.label}</dt>
                <dd class="mt-2 text-lg font-semibold text-slate-900">
                  {stat.value}
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </section>

  {/* Principles */}
  <section class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="mx-auto max-w-6xl">
      <div class="mx-auto mb-10 max-w-2xl text-center">
        <h2 class="text-balance text-2xl font-semibold text-slate-900 md:text-3xl">
          Our operating principles
        </h2>
        <p class="mt-2 text-pretty text-slate-600">
          This is a workflow support service, not a software rollout.
        </p>
      </div>

      <div class="grid gap-6 lg:grid-cols-3">
        {
          principles.map((p) => (
            <div class="rounded-3xl border border-slate-200 bg-white p-7 shadow-sm">
              <h3 class="text-lg font-semibold text-slate-900">{p.title}</h3>
              <p class="mt-3 text-slate-700">{p.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* What we do / do not do */}
  <section class="mx-auto max-w-[85rem] px-4 pb-14 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-6xl">
      <div class="grid gap-6 lg:grid-cols-2">
        <div class="rounded-3xl border border-slate-200 bg-white p-7 shadow-sm">
          <h2 class="text-xl font-semibold text-slate-900">What we do</h2>
          <ul class="mt-4 list-disc space-y-2 pl-6 text-slate-700 marker:text-teal-600">
            {whatWeDo.map((item) => <li>{item}</li>)}
          </ul>
          <p class="mt-4 text-sm text-slate-600">
            You review and approve. Nothing is final until your team signs off.
          </p>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-white p-7 shadow-sm">
          <h2 class="text-xl font-semibold text-slate-900">What we do not do</h2>
          <ul class="mt-4 list-disc space-y-2 pl-6 text-slate-700 marker:text-teal-600">
            {whatWeDoNotDo.map((item) => <li>{item}</li>)}
          </ul>
          <p class="mt-4 text-sm text-slate-600">
            This clarity is intentional. It keeps expectations clean and risk low.
          </p>
        </div>
      </div>
    </div>
  </section>

  {/* Teal band */}
  <section class="mx-auto max-w-[85rem] px-4 pb-14 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-6xl">
      <div class="relative isolate overflow-hidden rounded-3xl bg-teal-200 p-8 shadow-sm sm:p-10">
        <div class="pointer-events-none absolute inset-0 opacity-20" style="background-image: url(/guilloche.svg); background-repeat: repeat;"></div>

        <div class="relative">
          <h2 class="text-balance text-2xl font-semibold text-slate-900">
            Want to sanity check fit before anything else?
          </h2>
          <p class="mt-3 max-w-2xl text-slate-700">
            If scheduling is draining time and attention, the pilot is a low risk way to test a better workflow.
          </p>

          <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center">
            <a
              href="/pilot"
              class="inline-flex items-center justify-center rounded-xl bg-teal-700 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-teal-600"
            >
              View the pilot
            </a>
            <a
              href={ctaLink}
              class="inline-flex items-center justify-center rounded-xl border border-teal-700 bg-white px-5 py-3 text-sm font-semibold text-teal-800 hover:bg-teal-50"
            >
              Email us
            </a>
            <span class="text-sm text-slate-600">
              Simple process. Clear handoffs. Your final approval.
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>